<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - PromptFill 管理后台</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- 顶部导航 -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gray-800">PromptFill 管理后台</h1>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-gray-600">欢迎，<%= admin.username %></span>
          <a href="/admin/logout" class="text-red-600 hover:text-red-700">退出</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 提示消息 -->
    <% if (success) { %>
      <div class="bg-green-50 border border-green-200 text-green-600 px-4 py-3 rounded-lg mb-6">
        <%= success %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-6">
        <%= error %>
      </div>
    <% } %>

    <!-- 操作栏 -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h2 class="text-2xl font-bold text-gray-800">模板管理</h2>
        <p class="text-gray-500 mt-1">共 <%= templates.length %> 个模板 | 数据版本：<%= version.dataVersion %></p>
      </div>
      <div class="flex gap-3">
        <form method="POST" action="/admin/version" class="flex items-center gap-2">
          <input
            type="text"
            name="version"
            value="<%= version.dataVersion %>"
            class="px-3 py-2 border border-gray-300 rounded-lg w-32 text-sm"
            placeholder="版本号"
          />
          <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm">
            更新版本
          </button>
        </form>
        <a
          href="/admin/templates/new"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          新建模板
        </a>
      </div>
    </div>

    <!-- 模板列表 -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">预览</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID / 名称</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">作者</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">标签</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% templates.forEach(function(template) { %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <% if (template.imageUrl) { %>
                  <img
                    src="<%= template.imageUrl %>"
                    alt="<%= template.name.cn %>"
                    class="w-16 h-16 object-cover rounded-lg"
                  />
                <% } else { %>
                  <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center">
                    <span class="text-gray-400 text-xs">无图</span>
                  </div>
                <% } %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= template.name.cn %></div>
                <div class="text-sm text-gray-500"><%= template.id %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= template.author %>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <% template.tags.forEach(function(tag) { %>
                    <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full"><%= tag %></span>
                  <% }) %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if (template.isActive) { %>
                  <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">启用</span>
                <% } else { %>
                  <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">禁用</span>
                <% } %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <a
                    href="/admin/templates/<%= template.id %>/edit"
                    class="text-blue-600 hover:text-blue-900"
                  >
                    编辑
                  </a>
                  <form method="POST" action="/admin/templates/<%= template.id %>/toggle" class="inline">
                    <button type="submit" class="text-yellow-600 hover:text-yellow-900">
                      <%= template.isActive ? '禁用' : '启用' %>
                    </button>
                  </form>
                  <form
                    method="POST"
                    action="/admin/templates/<%= template.id %>/delete"
                    class="inline"
                    onsubmit="return confirm('确定要删除这个模板吗？')"
                  >
                    <button type="submit" class="text-red-600 hover:text-red-900">
                      删除
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- 快捷链接 -->
    <div class="mt-8 flex gap-4">
      <a href="/admin/banks" class="text-blue-600 hover:text-blue-700">词库管理 →</a>
      <a href="/" class="text-gray-600 hover:text-gray-700">返回前台 →</a>
    </div>
  </div>
</body>
</html>
